<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="15dp"
        android:background="@drawable/background_round"
        >

        <RelativeLayout
            android:id="@+id/icon_relativelayout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="55dp"
            android:layout_height="55dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            >

            <ImageView
                android:id="@+id/icon_image"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:scaleType="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="#D32F2F" />

            <TextView
                android:id="@+id/icon_letter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/icon_image"
                android:layout_alignTop="@+id/icon_image"
                android:layout_alignRight="@+id/icon_image"
                android:layout_alignBottom="@+id/icon_image"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="E"
                android:textSize="40sp"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <TextView
            android:id="@+id/email_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ju Pan"
            android:layout_toEndOf="@+id/icon_relativelayout"
            android:layout_toRightOf="@+id/icon_relativelayout"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/email_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, it's me."
            android:layout_toEndOf="@+id/icon_relativelayout"
            android:layout_toRightOf="@+id/icon_relativelayout"
            android:layout_below="@+id/email_account"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            />

    </RelativeLayout>

